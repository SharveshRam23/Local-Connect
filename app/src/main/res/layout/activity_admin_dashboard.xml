<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Header with Home Button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="24dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Admin Dashboard"
            android:textSize="24sp"
            android:textStyle="bold"/>

        <ImageButton
            android:id="@+id/btnHome"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_home"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Home"
            android:tint="#E53935"/>
    </LinearLayout>


    <Button
        android:id="@+id/btnApproveProviders"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Approve Pending Providers"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/btnViewUsers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View Registered Users"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/btnPostNotice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Post New Notice"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/btnManageIssues"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Manage Reported Issues"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Existing Notices"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvAdminNotices"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <Button
        android:id="@+id/btnAdminLogout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:layout_marginTop="16dp"
        style="@style/Widget.MaterialComponents.Button.TextButton"/>

</LinearLayout>
