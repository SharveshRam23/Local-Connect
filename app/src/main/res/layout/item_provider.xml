<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvProviderName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Provider Name"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvProviderCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Category: Plumber"
            android:textSize="14sp"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/tvProviderExperience"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Experience: 5 Years"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvProviderPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone: 1234567890"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvProviderPincode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Service Area: 600001"
            android:textSize="14sp"
            android:textColor="#555555"/>

    </LinearLayout>
</androidx.cardview.widget.CardView>
