<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#121212">

    <!-- Top Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_home"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:tint="#FFFFFF"
            android:rotation="-180"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Edit Image"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginStart="16dp"/>

        <Button
            android:id="@+id/btnDone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Done"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:textColor="#26A69A"/>
    </LinearLayout>

    <!-- Image Preview Container -->
    <FrameLayout
        android:id="@+id/imageContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#000000">

        <jp.co.cyberagent.android.gpuimage.GPUImageView
            android:id="@+id/gpuImageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerInside"/>
    </FrameLayout>

    <!-- Toolbar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#1E1E1E">

        <!-- Tool Selection -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="4">

            <ImageButton
                android:id="@+id/btnToolCrop"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@android:drawable/ic_menu_crop"
                android:background="?attr/selectableItemBackground"
                android:tint="#FFFFFF"/>

            <ImageButton
                android:id="@+id/btnToolFilter"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@android:drawable/ic_menu_gallery"
                android:background="?attr/selectableItemBackground"
                android:tint="#FFFFFF"/>

            <ImageButton
                android:id="@+id/btnToolResize"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@android:drawable/ic_menu_set_as"
                android:background="?attr/selectableItemBackground"
                android:tint="#FFFFFF"/>

            <ImageButton
                android:id="@+id/btnToolRotate"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@android:drawable/ic_menu_rotate"
                android:background="?attr/selectableItemBackground"
                android:tint="#FFFFFF"/>
        </LinearLayout>

        <!-- Resize Options -->
        <HorizontalScrollView
            android:id="@+id/resizeScroll"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:padding="8dp"
            android:visibility="gone">

            <LinearLayout
                android:id="@+id/resizeContainer"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                
                <TextView
                    android:id="@+id/btnResizeSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Small (50%)"
                    android:textColor="#FFFFFF"
                    android:padding="16dp"
                    android:background="?attr/selectableItemBackground"/>

                <TextView
                    android:id="@+id/btnResizeMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Medium (75%)"
                    android:textColor="#FFFFFF"
                    android:padding="16dp"
                    android:background="?attr/selectableItemBackground"/>

                <TextView
                    android:id="@+id/btnResizeOriginal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Original (100%)"
                    android:textColor="#FFFFFF"
                    android:padding="16dp"
                    android:background="?attr/selectableItemBackground"/>
            </LinearLayout>
        </HorizontalScrollView>

        <!-- Filter Selection (Scrollable) -->
        <HorizontalScrollView
            android:id="@+id/filterScroll"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:padding="8dp"
            android:visibility="gone">

            <LinearLayout
                android:id="@+id/filterContainer"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <!-- Filters will be added dynamically -->
            </LinearLayout>
        </HorizontalScrollView>

    </LinearLayout>

</LinearLayout>
