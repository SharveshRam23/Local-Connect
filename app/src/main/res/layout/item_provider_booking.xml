<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvRequestService"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Plumbing Request"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tvRequestUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User: Jane Smith"
            android:layout_marginTop="4dp"/>

        <TextView
            android:id="@+id/tvRequestDateTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date: 2026-02-05 10:00"
            android:layout_marginTop="4dp"/>

        <TextView
            android:id="@+id/tvRequestStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="STATUS"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_marginTop="4dp"
            android:padding="4dp"/>

        <LinearLayout
            android:id="@+id/layoutActions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            android:visibility="gone">

            <Button
                android:id="@+id/btnApprove"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Approve"
                android:backgroundTint="#4CAF50"
                android:layout_marginEnd="8dp"/>

            <Button
                android:id="@+id/btnDecline"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Decline"
                android:backgroundTint="#F44336"
                android:layout_marginEnd="8dp"/>

            <Button
                android:id="@+id/btnComplete"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Complete"
                android:backgroundTint="#2196F3"
                android:visibility="gone"/>

        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
