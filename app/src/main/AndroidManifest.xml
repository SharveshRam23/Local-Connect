<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Permissions -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" android:maxSdkVersion="32" />
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_MEDIA_PLAYBACK" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <uses-permission android:name="android.permission.ACCESS_BACKGROUND_LOCATION" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <application
        android:name=".LocalConnectApp"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Localconnect"
        tools:targetApi="31">

        <!-- Main Screen -->
        <activity
            android:name=".MainActivity"
            android:exported="true">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>

        <!-- Issue Reporting -->
        <activity
            android:name=".ui.issue.ReportIssueActivity"
            android:exported="false" />

        <activity
            android:name=".ui.issue.NearbyIssuesActivity"
            android:exported="false" />

        <activity
            android:name=".ui.issue.ImageEditorActivity"
            android:exported="false" />

        <activity
            android:name="com.yalantis.ucrop.UCropActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />

        <!-- User Activities -->
        <activity
            android:name=".ui.user.UserRegistrationActivity"
            android:exported="false" />

        <activity
            android:name=".ui.user.UserLoginActivity"
            android:exported="false" />

        <activity
            android:name=".ui.user.UserHomeActivity"
            android:exported="false" />

        <activity
            android:name=".ui.user.EssentialServicesActivity"
            android:exported="false" />

        <activity
            android:name=".ui.user.MandatoryServiceDetailActivity"
            android:exported="false" />

        <activity
            android:name=".ui.user.ServiceListActivity"
            android:exported="false" />

        <activity
            android:name=".ui.user.ProviderProfileActivity"
            android:exported="false" />

        <activity
            android:name=".ui.user.BookingActivity"
            android:exported="false" />

        <activity
            android:name=".ui.user.RateProviderActivity"
            android:exported="false" />

        <activity
            android:name=".ui.user.ProviderRatingsActivity"
            android:exported="false" />

        <activity
            android:name=".ui.user.MyBookingsActivity"
            android:exported="false" />

        <activity
            android:name=".ui.user.EditUserProfileActivity"
            android:exported="false" />

        <!-- Provider Activities -->
        <activity
            android:name=".ui.provider.ProviderRegistrationActivity"
            android:exported="false" />

        <activity
            android:name=".ui.provider.ProviderLoginActivity"
            android:exported="false" />

        <activity
            android:name=".ui.provider.ProviderDashboardActivity"
            android:exported="false" />

        <activity
            android:name=".ui.provider.ProviderBookingsActivity"
            android:exported="false" />

        <activity
            android:name=".ui.provider.EditProviderProfileActivity"
            android:exported="false" />

        <!-- Admin Activities -->
        <activity
            android:name=".ui.admin.AdminLoginActivity"
            android:exported="false" />

        <activity
            android:name=".ui.admin.AdminDashboardActivity"
            android:exported="false" />

        <activity
            android:name=".ui.admin.AdminIssueListActivity"
            android:exported="false" />

        <activity
            android:name=".ui.admin.AdminIssueDetailActivity"
            android:exported="false" />

        <activity
            android:name=".ui.admin.AdminProfileActivity"
            android:exported="false" />

        <activity
            android:name=".ui.admin.ManageMandatoryServicesActivity"
            android:exported="false" />

        <activity
            android:name=".ui.admin.AddMandatoryServiceActivity"
            android:exported="false" />

        <activity
            android:name=".ui.user.UserIssueDetailActivity"
            android:exported="false" />

        <activity
            android:name=".ui.admin.PickLocationActivity"
            android:exported="false" />

        <activity
            android:name=".ui.admin.AdminNoticeListActivity"
            android:exported="false" />

        <activity
            android:name=".ui.user.PublicNoticeListActivity"
            android:exported="false" />

        <service
            android:name=".service.MediaPlaybackService"
            android:exported="false"
            android:foregroundServiceType="mediaPlayback">
            <intent-filter>
                <action android:name="androidx.media3.session.MediaSessionService" />
            </intent-filter>
        </service>

        <receiver
            android:name=".receiver.GeofenceReceiver"
            android:enabled="true"
            android:exported="true" />
    </application>

</manifest>
